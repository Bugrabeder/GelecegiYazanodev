@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model WebÖdev.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<style>
    .deneme{
        background-color:aqua;
    }
    .deneme2 {
        font-size: 30px;
        text-align: center;
    }
</style>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body class="deneme">
    <form  method="post" class="deneme2" >
        <p>
            <label>Kullanıcı Adı giriniz:</label>
            <input asp-for="KullaniciAdi" placeholder="Kullanıcı Adı Giriniz" />
            <span asp-validation-for="KullaniciAdi"></span>
        </p>
        
        <p>
            <label>Telefon Numarası Giriniz:</label>
            <input asp-for="TelefonNumarasi"  placeholder="Telefon Numarası Giriniz" />
            <span asp-validation-for="TelefonNumarasi"></span>
        </p>
        
        <p>
            <label>Email giriniz:</label>
            <input asp-for="EMail" placeholder="Email Giriniz"/>
            <span asp-validation-for="EMail"></span>
        </p>
        <p>
            <label>Gelip gelmeme durumunu seçiniz:</label>
            <select asp-for="Durum">
                <option value="Geliyor">Geliyorum</option>
                <option value="Gelmiyor">Gelmiyorum</option>
            </select>
        </p>
        <button type="submit">Gönder</button>
    </form>
</body>
</html>
